<h2>Create Playlist</h2>

<form class="form add-form playlist" id="addPlaylist">
  <div class="form-group">
    <label for="playlist-name">Playlist Name:</label>
    <input class="form-input" type="text" id="playlist-name" />
  </div>
  <input class="form-input" type="hidden" id="playlist-user_id" value="{{user_id}}" />
  <div class="form-group">
    <label for="playlist-description">Description:</label>
    <input class="form-input" type="text" id="playlist-description" />
  </div>
  <div class="form-group">
      <input class="form-input" type="checkbox" id="playlist-isPublic" />&nbsp;
      <label for="playlist-isPublic">Make public</label>
    </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit">Add Playlist</button>
  </div>
</form>

<script src="/js/playlist-add.js"></script>